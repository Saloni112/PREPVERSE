<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>PrepVerse - Register</title>
    <link rel="stylesheet" href="css/styles.css">
    <link rel="stylesheet" href="css/auth.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;500;600;700&display=swap" rel="stylesheet">
    <style>
        /* Enhanced Auth Styles with Animations */
        :root {
            --primary: #1070AE;
            --primary-light: #439FC8;
            --primary-dark: #05243B;
            --secondary: #064471;
            --light: #F3EDE1;
            --dark: #05243B;
            --darker: #041A2E;
            --gray: #7e7e7e;
            --success: #28a745;
        }

        body {
            height: 100%;
            margin: 0;
            font-family: 'Poppins', 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background-color: var(--dark);
            color: var(--light);
            overflow-x: hidden;
            scroll-behavior: smooth;
        }

        /* Loading Animation */
        .loading-wrapper {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background-color: var(--darker);
            display: flex;
            justify-content: center;
            align-items: center;
            z-index: 9999;
            transition: opacity 0.5s ease-out;
        }

        /* Auth Section with Animated Background */
        .auth-section {
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 2rem;
            background: radial-gradient(ellipse at bottom, var(--darker) 0%, var(--dark) 100%);
            position: relative;
            overflow: hidden;
        }

        .auth-section::before {
            content: "";
            position: absolute;
            top: -50%;
            left: -50%;
            width: 200%;
            height: 200%;
            background: 
                radial-gradient(circle at 30% 30%, rgba(16, 112, 174, 0.1) 0%, transparent 20%),
                radial-gradient(circle at 70% 70%, rgba(16, 112, 174, 0.1) 0%, transparent 20%);
            animation: floatBackground 20s linear infinite alternate;
            z-index: 0;
        }

        /* Auth Container with Glass Morphism */
        .auth-container {
            width: 100%;
            max-width: 500px;
            background: rgba(5, 36, 59, 0.85);
            border-radius: 16px;
            padding: 2.5rem;
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.3);
            border: 1px solid rgba(16, 112, 174, 0.3);
            backdrop-filter: blur(10px);
            -webkit-backdrop-filter: blur(10px);
            position: relative;
            z-index: 1;
            transform: translateY(20px);
            opacity: 0;
            animation: fadeInUp 0.6s ease-out forwards;
        }

        /* Header Styles with Logo Animation */
        .auth-header {
            text-align: center;
            margin-bottom: 2rem;
            transform: translateY(-20px);
            opacity: 0;
            animation: fadeInUp 0.6s ease-out 0.2s forwards;
        }

        .auth-logo {
            width: 80px;
            height: auto;
            margin-bottom: 1rem;
            filter: drop-shadow(0 0 10px rgba(16, 112, 174, 0.5));
            animation: pulse 2s infinite alternate;
        }

        .auth-header h2 {
            color: var(--primary-light);
            font-size: 2rem;
            margin-bottom: 0.5rem;
            background: linear-gradient(to right, var(--primary), var(--primary-light));
            -webkit-background-clip: text;
            background-clip: text;
            color: transparent;
        }

        /* Form Styles with Input Animations */
        #signupForm {
            display: flex;
            flex-direction: column;
            gap: 1.5rem;
            transform: translateY(20px);
            opacity: 0;
            animation: fadeInUp 0.6s ease-out 0.4s forwards;
        }

        .form-group {
            display: flex;
            flex-direction: column;
            position: relative;
        }

        .form-group label {
            color: var(--light);
            margin-bottom: 0.5rem;
            font-weight: 500;
            transform: translateX(-10px);
            opacity: 0;
            animation: fadeInRight 0.4s ease-out forwards;
        }

        .form-group input, .form-group select {
            padding: 1rem;
            border-radius: 8px;
            border: 1px solid var(--secondary);
            background-color: rgba(6, 68, 113, 0.3);
            color: var(--light);
            font-size: 1rem;
            transition: all 0.3s ease;
            transform: translateY(10px);
            opacity: 0;
            animation: fadeInUp 0.4s ease-out forwards;
        }

        .form-group input:focus, .form-group select:focus {
            outline: none;
            border-color: var(--primary-light);
            box-shadow: 0 0 0 2px rgba(16, 112, 174, 0.3);
            background-color: rgba(6, 68, 113, 0.5);
        }

        /* User Type Selector */
        .user-type-selector {
            display: flex;
            gap: 1rem;
            margin-bottom: 1rem;
        }

        .user-type-option {
            flex: 1;
            text-align: center;
            padding: 1rem;
            border: 2px solid var(--secondary);
            border-radius: 8px;
            cursor: pointer;
            transition: all 0.3s ease;
            background: rgba(6, 68, 113, 0.3);
        }

        .user-type-option:hover {
            border-color: var(--primary-light);
            background: rgba(16, 112, 174, 0.2);
        }

        .user-type-option.active {
            border-color: var(--primary-light);
            background: rgba(16, 112, 174, 0.3);
            box-shadow: 0 0 10px rgba(16, 112, 174, 0.3);
        }

        .user-type-icon {
            font-size: 1.5rem;
            margin-bottom: 0.5rem;
            color: var(--primary-light);
        }

        .user-type-label {
            font-weight: 600;
            color: var(--light);
        }

        /* Faculty-specific fields */
        .faculty-fields {
            display: none;
            animation: fadeIn 0.5s ease-out;
        }

        .faculty-fields.show {
            display: block;
        }

        /* Password Strength Indicator */
        .password-strength {
            height: 4px;
            background: var(--secondary);
            border-radius: 2px;
            margin-top: 0.5rem;
            overflow: hidden;
            position: relative;
        }

        .strength-meter {
            height: 100%;
            width: 0;
            background: var(--primary);
            transition: width 0.3s ease, background 0.3s ease;
        }

        /* Button Styles with Hover Effects */
        .btn-auth {
            background-color: var(--primary);
            color: white;
            border: none;
            padding: 1rem;
            border-radius: 8px;
            font-size: 1.1rem;
            font-weight: 600;
            cursor: pointer;
            transition: all 0.3s ease;
            margin-top: 1rem;
            position: relative;
            overflow: hidden;
            transform: translateY(20px);
            opacity: 0;
            animation: fadeInUp 0.6s ease-out 0.6s forwards;
        }

        .btn-auth:hover {
            background-color: var(--primary-light);
            transform: translateY(-2px);
            box-shadow: 0 5px 15px rgba(16, 112, 174, 0.4);
        }

        .btn-auth:active {
            transform: translateY(0);
        }

        .btn-auth::after {
            content: '';
            position: absolute;
            top: 0;
            left: -100%;
            width: 100%;
            height: 100%;
            background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.2), transparent);
            transition: 0.5s;
        }

        .btn-auth:hover::after {
            left: 100%;
        }

        /* Footer/Link Styles */
        .auth-footer {
            text-align: center;
            margin-top: 1.5rem;
            transform: translateY(20px);
            opacity: 0;
            animation: fadeInUp 0.6s ease-out 0.8s forwards;
        }

        .auth-footer p {
            color: var(--gray);
        }

        .auth-footer a {
            color: var(--primary-light);
            text-decoration: none;
            font-weight: 600;
            position: relative;
        }

        .auth-footer a::after {
            content: '';
            position: absolute;
            bottom: -2px;
            left: 0;
            width: 0;
            height: 1px;
            background: var(--primary-light);
            transition: width 0.3s ease;
        }

        .auth-footer a:hover::after {
            width: 100%;
        }

        /* Success Message */
        .success-message {
            background: rgba(40, 167, 69, 0.2);
            border: 1px solid var(--success);
            color: white;
            padding: 1rem;
            border-radius: 8px;
            margin-bottom: 1.5rem;
            display: none;
            animation: fadeIn 0.5s ease-out;
        }

        /* Error Message */
        .error-message {
            background: rgba(220, 53, 69, 0.2);
            border: 1px solid #dc3545;
            color: white;
            padding: 1rem;
            border-radius: 8px;
            margin-bottom: 1.5rem;
            display: none;
            animation: fadeIn 0.5s ease-out;
        }

        /* Keyframe Animations */
        @keyframes fadeInUp {
            from {
                transform: translateY(20px);
                opacity: 0;
            }
            to {
                transform: translateY(0);
                opacity: 1;
            }
        }

        @keyframes fadeInRight {
            from {
                transform: translateX(-10px);
                opacity: 0;
            }
            to {
                transform: translateX(0);
                opacity: 1;
            }
        }

        @keyframes fadeIn {
            from {
                opacity: 0;
            }
            to {
                opacity: 1;
            }
        }

        @keyframes floatBackground {
            0% {
                transform: translate(0, 0);
            }
            100% {
                transform: translate(50px, 50px);
            }
        }

        @keyframes pulse {
            0% {
                filter: drop-shadow(0 0 10px rgba(16, 112, 174, 0.5));
            }
            100% {
                filter: drop-shadow(0 0 15px rgba(16, 112, 174, 0.8));
            }
        }

        /* Responsive Adjustments */
        @media (max-width: 768px) {
            .auth-container {
                padding: 1.5rem;
            }
            
            .auth-header h2 {
                font-size: 1.8rem;
            }
            
            .auth-logo {
                width: 70px;
            }
        }

        @media (max-width: 576px) {
            .auth-section {
                padding: 1rem;
            }
            
            .auth-container {
                padding: 1.25rem;
            }
            
            .auth-header h2 {
                font-size: 1.6rem;
            }
        }

        /* Custom Button Styles for Login/Signup */
        .nav-buttons {
            display: flex;
            gap: 1rem;
            align-items: center;
        }

        .btn-login {
            background: transparent;
            color: var(--light);
            border: 2px solid var(--primary);
            padding: 0.6rem 1.5rem;
            border-radius: 8px;
            font-weight: 600;
            text-decoration: none;
            transition: all 0.3s ease;
            font-size: 0.9rem;
        }

        .btn-login:hover {
            background: rgba(16, 112, 174, 0.1);
            color: var(--primary-light);
            transform: translateY(-2px);
        }

        .btn-signup {
            background: var(--primary);
            color: white;
            border: 2px solid var(--primary);
            padding: 0.6rem 1.5rem;
            border-radius: 8px;
            font-weight: 600;
            text-decoration: none;
            transition: all 0.3s ease;
            font-size: 0.9rem;
        }

        .btn-signup:hover {
            background: var(--primary-light);
            border-color: var(--primary-light);
            color: white;
            transform: translateY(-2px);
            box-shadow: 0 4px 12px rgba(16, 112, 174, 0.3);
        }

        /* Password Strength Meter */
        .password-strength-container {
            margin-top: 0.5rem;
        }

        .strength-meter {
            width: 100%;
            height: 6px;
            background-color: rgba(255, 255, 255, 0.1);
            border-radius: 3px;
            overflow: hidden;
            margin-bottom: 0.25rem;
        }

        .strength-bar {
            height: 100%;
            width: 0%;
            transition: all 0.3s ease;
            border-radius: 3px;
        }

        .strength-text {
            font-size: 0.8rem;
            font-weight: 500;
            text-align: right;
            margin-bottom: 0.5rem;
            color: var(--gray);
        }

        /* Password Requirements */
        .password-requirements {
            background-color: rgba(6, 68, 113, 0.3);
            border-radius: 8px;
            padding: 1rem;
            margin-top: 0.5rem;
            border-left: 4px solid var(--primary);
            display: none;
        }

        .password-requirements p {
            margin: 0 0 0.5rem 0;
            font-weight: 600;
            font-size: 0.9rem;
            color: var(--light);
        }

        .password-requirements ul {
            list-style: none;
            padding: 0;
            margin: 0;
        }

        .password-requirements li {
            padding: 0.25rem 0;
            font-size: 0.85rem;
            display: flex;
            align-items: center;
            color: #dc3545;
        }

        .password-requirements li::before {
            content: "✗";
            margin-right: 0.5rem;
            color: #dc3545;
            font-weight: bold;
        }

        .password-requirements li.fulfilled {
            color: #198754;
        }

        .password-requirements li.fulfilled::before {
            content: "✓";
            color: #198754;
        }

        .password-requirements li.missing {
            color: #dc3545;
        }
    </style>
</head>

