    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    <script>
        // User Type Selection
        const userTypeOptions = document.querySelectorAll('.user-type-option');
        const userTypeInput = document.getElementById('userType');
        const facultyFields = document.getElementById('facultyFields');

        userTypeOptions.forEach(option => {
            option.addEventListener('click', function() {
                // Remove active class from all options
                userTypeOptions.forEach(opt => opt.classList.remove('active'));
                // Add active class to clicked option
                this.classList.add('active');
                // Update hidden input value
                const userType = this.getAttribute('data-type');
                userTypeInput.value = userType;
                
                // Show/hide faculty-specific fields
                if (userType === 'faculty') {
                    facultyFields.classList.add('show');
                } else {
                    facultyFields.classList.remove('show');
                }
            });
        });

        // Form submission
        const form = document.getElementById('signupForm');

        form.addEventListener('submit', async function (e) {
            e.preventDefault();

            const userType = userTypeInput.value;
            const facultyId = document.getElementById('facultyId').value;
            const department = document.getElementById('department').value;

            // Validate faculty-specific fields
            if (userType === 'faculty' && (!facultyId || !department)) {
                Swal.fire({
                    icon: 'error',
                    title: 'Missing Information',
                    text: 'Please fill in Faculty ID and Department'
                });
                return;
            }

            // Basic validation
            const name = document.getElementById('signupName').value;
            const email = document.getElementById('signupEmail').value;
            const password = document.getElementById('signupPassword').value;
            const confirmPassword = document.getElementById('confirmPassword').value;

            if (!name || !email || !password || !confirmPassword) {
                Swal.fire({
                    icon: 'error',
                    title: 'Missing Fields',
                    text: 'Please fill in all required fields'
                });
                return;
            }

            if (password !== confirmPassword) {
                Swal.fire({
                    icon: 'error',
                    title: 'Password Mismatch',
                    text: 'Passwords do not match'
                });
                return;
            }

            // Show loading state
            Swal.fire({
                title: 'Creating Account...',
                allowOutsideClick: false,
                didOpen: () => {
                    Swal.showLoading();
                }
            });

            // Prepare data object
            const data = {
                name: name,
                email: email,
                password: password,
                confirmPassword: confirmPassword
            };

            // Add faculty-specific fields if applicable
            if (userType === 'faculty') {
                data.facultyId = facultyId;
                data.department = department;
            }

            console.log('Sending registration data:', data);

            try {
                const endpoint = userType === 'faculty' ? '/register/faculty' : '/register/student';
                console.log('Using endpoint:', endpoint);
                
                const res = await fetch(endpoint, {
                    method: 'POST',
                    headers: { 
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify(data)
                });

                console.log('Response status:', res.status);
                
                let result;
                try {
                    result = await res.json();
                } catch (jsonError) {
                    console.error('JSON parse error:', jsonError);
                    throw new Error('Server returned invalid JSON response');
                }

                Swal.close(); // Close loading dialog

                if (result.success) {
                    // Success case
                    await Swal.fire({
                        icon: 'success',
                        title: 'Success!',
                        text: result.message
                    });
                    window.location.href = "/login";
                } else {
                    // Error case - show specific error message
                    await Swal.fire({
                        icon: 'error',
                        title: 'Registration Failed',
                        text: result.error || 'Please check your inputs and try again'
                    });
                }
            } catch (error) {
                Swal.close(); // Close loading dialog
                console.error('Registration error details:', error);
                
                await Swal.fire({
                    icon: 'error',
                    title: 'Registration Error',
                    text: error.message || 'An error occurred during registration. Please try again.'
                });
            }
        });

        // Password strength functionality
        const passwordInput = document.getElementById("signupPassword");
        const strengthMeter = document.getElementById("passwordStrength");
        const strengthText = document.getElementById("passwordStrengthText");
        const requirementsList = document.getElementById("passwordRequirements");

        // Password requirements
        const requirements = [
            { regex: /.{8,}/, text: "At least 8 characters", id: "length" },
            { regex: /[A-Z]/, text: "One uppercase letter", id: "uppercase" },
            { regex: /[0-9]/, text: "One number", id: "number" },
            { regex: /[\W_]/, text: "One special character", id: "special" }
        ];

        passwordInput.addEventListener("input", function () {
            const val = passwordInput.value;
            let strength = 0;
            let fulfilledCount = 0;

            // Update requirements list and calculate strength
            requirements.forEach(req => {
                const requirementElement = document.getElementById(req.id);
                const isFulfilled = req.regex.test(val);
                
                if (isFulfilled) {
                    requirementElement.classList.add("fulfilled");
                    requirementElement.classList.remove("missing");
                    strength++;
                    fulfilledCount++;
                } else {
                    requirementElement.classList.add("missing");
                    requirementElement.classList.remove("fulfilled");
                }
            });

            // Update strength meter
            const percentage = (strength / requirements.length) * 100;
            strengthMeter.style.width = `${percentage}%`;
            
            // Set color based on strength
            if (percentage < 25) {
                strengthMeter.style.backgroundColor = "#dc3545"; // Red
                strengthText.textContent = "Very Weak";
                strengthText.style.color = "#dc3545";
            } else if (percentage < 50) {
                strengthMeter.style.backgroundColor = "#fd7e14"; // Orange
                strengthText.textContent = "Weak";
                strengthText.style.color = "#fd7e14";
            } else if (percentage < 75) {
                strengthMeter.style.backgroundColor = "#ffc107"; // Yellow
                strengthText.textContent = "Medium";
                strengthText.style.color = "#ffc107";
            } else if (percentage < 100) {
                strengthMeter.style.backgroundColor = "#20c997"; // Teal
                strengthText.textContent = "Strong";
                strengthText.style.color = "#20c997";
            } else {
                strengthMeter.style.backgroundColor = "#198754"; // Green
                strengthText.textContent = "Very Strong";
                strengthText.style.color = "#198754";
            }

            // Show/hide requirements list
            if (val.length > 0 && fulfilledCount < requirements.length) {
                requirementsList.style.display = "block";
            } else {
                requirementsList.style.display = "none";
            }
        });
    </script>
