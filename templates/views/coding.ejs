        arrayProgressCircle.style.stroke = '#1070AE';
      }
      
      if (arrayProgressText) {
        arrayProgressText.textContent = `${Math.round(progressPercentage)}%`;
        arrayProgressText.setAttribute('fill', progressPercentage > 0 ? '#1070AE' : '#7e7e7e');
      }
      
      if (arrayProgressLabel) {
        arrayProgressLabel.textContent = `${arraySolved}/${totalProblems} problems solved`;
        arrayProgressLabel.className = progressPercentage === 100 ? 'text-success' : 'text-muted';
      }
    }

    // Set random daily quote
    document.getElementById('dailyQuote').textContent = quotes[Math.floor(Math.random() * quotes.length)];

    // ðŸ”¸ Pie chart (Total Progress) - Tumhara original chart code
    new Chart(document.getElementById('progressChart'), {
      type: 'doughnut',
      data: {
        labels: ['Completed', 'Remaining'],
        datasets: [{ 
          data: [data.totalSolved, data.totalProblems - data.totalSolved], 
          backgroundColor: ['#1070AE', '#2c4763'],
          borderWidth: 0,
          hoverOffset: 8
        }]
      },
      options: { 
        cutout: '70%',
        plugins: {
          legend: {
            position: 'bottom',
            labels: {
              padding: 20,
              usePointStyle: true,
              pointStyle: 'circle',
              color: '#F3EDE1'
            }
          }
        }
      }
    });

    // ðŸ”¸ Bar chart (Solved Problems) - Tumhara original chart code
    new Chart(document.getElementById('barChart'), {
      type: 'bar',
      data: {
        labels: ['Easy', 'Medium', 'Hard'],
        datasets: [{ 
          label: 'Solved', 
          data: [data.solved.Easy, data.solved.Medium, data.solved.Hard], 
          backgroundColor: ['#439FC8', '#1070AE', '#064471'],
          borderRadius: 6,
          borderSkipped: false
        }]
      },
      options: { 
        scales: { 
          y: { 
            beginAtZero: true,
            grid: {
              drawBorder: false,
              color: '#2c4763'
            },
            ticks: {
              color: '#F3EDE1'
            }
          },
          x: {
            grid: {
              display: false
            },
            ticks: {
              color: '#F3EDE1'
            }
          }
        },
        plugins: {
          legend: {
            display: false
          }
        }
      }
    });

    // ðŸ”¸ Weekly Progress - Tumhara original chart code
    const weeklyLabels = Object.keys(data.weekly);
    const weeklyValues = Object.values(data.weekly);
    new Chart(document.getElementById('weeklyChart'), {
      type: 'line',
      data: {
        labels: weeklyLabels,
        datasets: [{
          label: 'Weekly Solved (Oct 2025)',
          data: weeklyValues,
          borderColor: '#1070AE',
          backgroundColor: 'rgba(16,112,174,0.1)',
          tension: 0.4,
          fill: true,
          pointBackgroundColor: '#1070AE',
          pointBorderColor: '#ffffff',
          pointBorderWidth: 2,
          pointRadius: 5
        }]
      },
      options: { 
        scales: { 
          y: { 
            beginAtZero: true,
            grid: {
              drawBorder: false,
              color: '#2c4763'
            },
            ticks: {
              color: '#F3EDE1'
            }
          },
          x: {
            grid: {
              display: false
            },
            ticks: {
              color: '#F3EDE1'
            }
          }
        },
        plugins: {
          legend: {
            display: false
          }
        }
      }
    });
  }

  function updateAchievementBadges(totalSolved) {
    const badgeContainer = document.getElementById('achievementBadges');
    badgeContainer.innerHTML = '';

    if (totalSolved >= 5) {
      badgeContainer.innerHTML += '<span class="achievement-badge bronze"><i class="fas fa-medal me-1"></i>Bronze Coder</span>';
    }
    if (totalSolved >= 10) {
      badgeContainer.innerHTML += '<span class="achievement-badge silver"><i class="fas fa-medal me-1"></i>Silver Coder</span>';
    }
    if (totalSolved >= 20) {
      badgeContainer.innerHTML += '<span class="achievement-badge"><i class="fas fa-medal me-1"></i>Gold Coder</span>';
    }
    if (totalSolved >= 1) {
      badgeContainer.innerHTML += '<span class="achievement-badge" style="background: linear-gradient(135deg, #1070AE 0%, #439FC8 100%); color: white;"><i class="fas fa-star me-1"></i>First Step</span>';
    }
  }

  loadDashboard();
</script>
