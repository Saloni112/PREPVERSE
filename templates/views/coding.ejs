  // Function to scroll to progress chart
  function scrollToProgress() {
    document.getElementById('progressChart').scrollIntoView({ 
      behavior: 'smooth' 
    });
  }

  // Function to calculate streak based on consecutive days with solved problems
  function calculateStreak(solvedDates) {
    if (!solvedDates || solvedDates.length === 0) return 0;
    
    // Sort dates in descending order
    const sortedDates = solvedDates.sort((a, b) => new Date(b) - new Date(a));
    
    let streak = 1;
    let currentDate = new Date(sortedDates[0]);
    
    for (let i = 1; i < sortedDates.length; i++) {
      const prevDate = new Date(sortedDates[i]);
      const diffTime = currentDate - prevDate;
      const diffDays = diffTime / (1000 * 60 * 60 * 24);
      
      if (diffDays === 1) {
        streak++;
        currentDate = prevDate;
      } else {
        break;
      }
    }
    
    return streak;
  }

  // Function to update progress rings
  function updateProgressRings(arraySolved) {
    const totalArrayProblems = 10; // Total array problems available
    const arrayProgress = (arraySolved / totalArrayProblems) * 100;
    
    // Update array progress
    const arrayProgressCircle = document.querySelector('.progress-ring-circle');
    const arrayProgressText = document.getElementById('arrayProgressText');
    const arrayProgressLabel = document.getElementById('arrayProgressLabel');
    
    if (arrayProgressCircle && arrayProgress > 0) {
      const circumference = 2 * Math.PI * 35;
      const offset = circumference - (arrayProgress / 100) * circumference;
      arrayProgressCircle.style.strokeDashoffset = offset;
      arrayProgressCircle.style.stroke = '#1070AE';
    }
    
    if (arrayProgressText) {
      arrayProgressText.textContent = `${Math.round(arrayProgress)}%`;
    }
    
    if (arrayProgressLabel) {
      arrayProgressLabel.textContent = `${arraySolved}/${totalArrayProblems} problems solved`;
    }
  }

