    <!-- Main Content -->
    <div class="topic-container fade-in">
        <!-- Hero Header -->
        <div class="topic-hero">
            <h1 class="topic-title" id="topic-title">Loading...</h1>
            <p class="topic-subtitle">Master this topic with interactive video lessons and practice tests</p>
