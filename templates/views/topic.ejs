            </div>
            <div class="section-body">
                <div id="quiz">
                    <div class="text-center py-4">
                        <div class="spinner-border text-primary" role="status">
                            <span class="visually-hidden">Loading questions...</span>
                        </div>
                        <p class="mt-2">Loading practice questions...</p>
                    </div>
                </div>
                <div class="score-display" id="scoreDisplay"></div>
            </div>
        </div>

        <!-- Navigation Buttons -->
        <div class="navigation-buttons">
            <a href="/quant" class="btn-outline-modern">
                <i class="fas fa-arrow-left"></i>
                Back to Topics
            </a>
            <button class="btn-modern" id="submitQuiz">
                <i class="fas fa-paper-plane"></i>
                Submit Answers
            </button>
            <a href="#" class="btn-modern" id="nextTopic" style="display: none;">
                Next Topic
                <i class="fas fa-arrow-right"></i>
            </a>
        </div>
    </div>

    <script>
        // Enhanced topic data with more questions
        const topics = {
            'number-system': {
                name: 'Number System',
                video: 'https://www.youtube.com/watch?v=wqKpV2edSdE',
                questions: [
                    {
                        question: 'What is the smallest prime number?',
                        options: ['0', '1', '2', '3'],
                        answer: '2',
                        explanation: '2 is the smallest and only even prime number. Prime numbers are numbers greater than 1 that have no positive divisors other than 1 and themselves.'
                    },
                    {
                        question: 'Which of these is a composite number?',
                        options: ['11', '13', '15', '17'],
                        answer: '15',
                        explanation: '15 is a composite number because it has factors other than 1 and itself (3 and 5). Composite numbers have more than two factors.'
                    },
                    {
                        question: 'What is the sum of the first 5 prime numbers?',
                        options: ['18', '28', '26', '30'],
                        answer: '28',
                        explanation: 'The first 5 prime numbers are 2, 3, 5, 7, 11. Their sum is 2 + 3 + 5 + 7 + 11 = 28.'
                    }
                ]
            },
            'percentages': {
                name: 'Percentages', 
                video: 'https://www.youtube.com/watch?v=7kHE1q-TVEc',
                questions: [
                    {
                        question: 'If 20% of a number is 50, what is the number?',
                        options: ['200', '250', '300', '350'],
                        answer: '250',
                        explanation: '20% of x = 50, so x = 50 รท 0.20 = 250. To find the whole number when you know a percentage, divide the part by the percentage (in decimal form).'
                    },
                    {
                        question: 'What is 25% of 200?',
                        options: ['25', '50', '75', '100'],
                        answer: '50',
                        explanation: '25% of 200 = 0.25 ร 200 = 50. To find a percentage of a number, multiply the number by the percentage in decimal form.'
                    }
                ]
            },
            'number-series': {
                name: 'Number Series',
                video: 'https://www.youtube.com/watch?v=nCI-mtRhDPQ',
                questions: [
                    {
                        question: 'What comes next: 2, 4, 6, 8, ?',
                        options: ['9', '10', '12', '14'],
                        answer: '10',
                        explanation: 'This is a simple arithmetic sequence where each number increases by 2. 8 + 2 = 10.'
                    }
                ]
            },
            'seating-arrangement': {
                name: 'Seating Arrangement',
                video: 'https://www.youtube.com/watch?v=GYe98jwCn7g',
                questions: [
                    {
                        question: 'In a linear arrangement, if A is to the left of B and B is to the left of C, who is in the middle?',
                        options: ['A', 'B', 'C', 'Cannot determine'],
                        answer: 'B',
                        explanation: 'The arrangement is A, B, C from left to right. Therefore, B is in the middle.'
                    }
                ]
            },
            'reading-comprehension': {
                name: 'Reading Comprehension',
                video: 'https://www.youtube.com/watch?v=dPvWRYPadFg',
                questions: [
                    {
                        question: 'What is the main purpose of reading comprehension exercises?',
                        options: ['To improve reading speed', 'To understand and interpret text', 'To memorize content', 'To learn new vocabulary'],
                        answer: 'To understand and interpret text',
                        explanation: 'Reading comprehension focuses on understanding, interpreting, and analyzing written content.'
                    }
                ]
            },
            'para-jumbles': {
                name: 'Para Jumbles',
                video: 'https://www.youtube.com/watch?v=PgNBT_Zp_Us',
                questions: [
                    {
                        question: 'What is the first step in solving para jumbles?',
                        options: ['Look for transition words', 'Find the opening sentence', 'Identify the closing sentence', 'Read all sentences'],
                        answer: 'Read all sentences',
                        explanation: 'The first step is to read all sentences carefully to understand the overall theme and context.'
                    }
                ]
            }
        };

        // Get topic from URL
        const urlParams = new URLSearchParams(window.location.search);
        const slug = urlParams.get('slug');

        if (!slug) {
            document.body.innerHTML = `
                <div class="topic-container">
                    <div class="alert alert-warning text-center" style="background: rgba(255,193,7,0.1); border: 1px solid rgba(255,193,7,0.3); color: #ffc107;">
                        <h4><i class="fas fa-exclamation-triangle"></i> No Topic Selected</h4>
                        <p>Please select a topic from the Quant section.</p>
                        <a href="/quant" class="btn-modern mt-3">
                            <i class="fas fa-arrow-left"></i> Back to Topics
                        </a>
                    </div>
                </div>
            `;
        } else if (!topics[slug]) {
            document.body.innerHTML = `
                <div class="topic-container">
                    <div class="alert alert-danger text-center" style="background: rgba(220,53,69,0.1); border: 1px solid rgba(220,53,69,0.3); color: #dc3545;">
                        <h4><i class="fas fa-times-circle"></i> Topic Not Found</h4>
                        <p>The topic "${slug}" was not found.</p>
                        <a href="/quant" class="btn-modern mt-3">
                            <i class="fas fa-arrow-left"></i> Back to Topics
                        </a>
                    </div>
                </div>
            `;
        } else {
            loadTopic(slug);
        }

        function loadTopic(slug) {
            const topic = topics[slug];
            
            // Set title
            document.getElementById('topic-title').textContent = topic.name;

            // Load video link
            const videoLink = document.getElementById('videoLink');
            const videoLinkText = document.getElementById('videoLinkText');
            const videoTitle = document.getElementById('video-title');
            
            videoLink.href = topic.video;
            videoLinkText.textContent = `Watch ${topic.name} Tutorial Video`;
            videoTitle.textContent = `${topic.name} Complete Tutorial`;

            // Load quiz
            const quizDiv = document.getElementById('quiz');
            quizDiv.innerHTML = '';

            topic.questions.forEach((q, index) => {
                const questionDiv = document.createElement('div');
                questionDiv.className = 'quiz-item';
                questionDiv.innerHTML = `
                    <div class="question-text">Q${index + 1}: ${q.question}</div>
                    <div class="options-grid">
                        ${q.options.map(option => `
                            <div class="option-item">
                                <input type="radio" name="question${index}" value="${option}" id="q${index}-${option}">
                                <label for="q${index}-${option}">${option}</label>
                            </div>
                        `).join('')}
                    </div>
                    <div class="explanation" id="explanation${index}">
                        <strong>Explanation:</strong> ${q.explanation}
                    </div>
                `;
                quizDiv.appendChild(questionDiv);
            });

            // Add event listener for submit button
            document.getElementById('submitQuiz').addEventListener('click', submitQuiz);
        }

        function submitQuiz() {
            const topic = topics[slug];
            let score = 0;
            const totalQuestions = topic.questions.length;

            topic.questions.forEach((q, index) => {
                const selectedOption = document.querySelector(`input[name="question${index}"]:checked`);
                const explanation = document.getElementById(`explanation${index}`);
                const options = document.querySelectorAll(`input[name="question${index}"]`);

                // Show explanation
                explanation.classList.add('show');

                // Color code options
                options.forEach(opt => {
                    const optionItem = opt.parentElement;
                    if (opt.value === q.answer) {
                        optionItem.style.background = 'rgba(40, 167, 69, 0.2)';
                        optionItem.style.borderColor = 'var(--success)';
                    } else if (selectedOption && opt === selectedOption && opt.value !== q.answer) {
                        optionItem.style.background = 'rgba(220, 53, 69, 0.2)';
                        optionItem.style.borderColor = 'var(--danger)';
                    }
                });

                if (selectedOption && selectedOption.value === q.answer) {
                    score++;
                }
            });

            // Update progress
            const progress = Math.round((score / totalQuestions) * 100);
            document.getElementById('progressFill').style.width = `${progress}%`;
            document.querySelector('.progress-percent').textContent = `${progress}%`;

            // Show score
            const scoreDisplay = document.getElementById('scoreDisplay');
            scoreDisplay.innerHTML = `
                <i class="fas fa-trophy me-2"></i>
                Your Score: ${score}/${totalQuestions} (${progress}%)
                <br>
                <small>${getPerformanceMessage(progress)}</small>
            `;
            scoreDisplay.classList.add('show');

            // Disable submit button and show next topic button
            document.getElementById('submitQuiz').disabled = true;
            document.getElementById('nextTopic').style.display = 'inline-flex';

            // Update next topic link
            const topicOrder = ['number-system', 'percentages', 'number-series', 'seating-arrangement', 'reading-comprehension', 'para-jumbles'];
