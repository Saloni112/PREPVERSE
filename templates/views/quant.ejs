            color: var(--light);
        }

        .question-text {
            color: var(--light);
            font-weight: 500;
            line-height: 1.6;
            font-size: 1.2rem;
        }

        /* Options Styles */
        .options-container {
            display: flex;
            flex-direction: column;
            gap: 0.8rem;
            margin: 2rem 0;
        }

        .option-item {
            background: rgba(255, 255, 255, 0.1);
            border: 2px solid transparent;
            border-radius: 8px;
            padding: 1rem 1.5rem;
            cursor: pointer;
