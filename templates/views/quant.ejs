        }
        
        .final-submit-btn:disabled {
            background: var(--gray);
            cursor: not-allowed;
            transform: none;
            box-shadow: none;
        }
        
        /* Performance Meter */
        .performance-meter {
            width: 150px;
            height: 150px;
            margin: 0 auto;
            position: relative;
        }
        
        .performance-circle {
            width: 100%;
            height: 100%;
            border-radius: 50%;
            background: conic-gradient(var(--primary-light) 0%, transparent 0%);
            display: flex;
            align-items: center;
            justify-content: center;
            position: relative;
        }
        
        .performance-inner {
