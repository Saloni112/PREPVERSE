        .practice-card:nth-child(3) { animation-delay: 0.6s; }

        .practice-card:hover {
            transform: translateY(-10px);
            box-shadow: 0 15px 30px rgba(0, 0, 0, 0.3);
            border-color: var(--primary-light);
        }

        .practice-icon {
            width: 100px;
            height: 100px;
