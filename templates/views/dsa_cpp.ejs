  <script>
    // Rank system configuration
    const RANK_SYSTEM = {
      NEWBIE: { min: 0, max: 4, name: "Newbie", class: "rank-newbie" },
      BEGINNER: { min: 5, max: 14, name: "Beginner", class: "rank-beginner" },
      ADVANCED_BEGINNER: { min: 15, max: 29, name: "Advanced Beginner", class: "rank-advanced" },
      INTERMEDIATE: { min: 30, max: 49, name: "Intermediate", class: "rank-intermediate" },
      EXPERT: { min: 50, max: 99, name: "Expert", class: "rank-expert" },
      MASTER: { min: 100, max: 199, name: "Master", class: "rank-master" },
      PRO: { min: 200, max: 499, name: "Pro", class: "rank-pro" },
      GRANDMASTER: { min: 500, max: Infinity, name: "Grandmaster", class: "rank-grandmaster" }
    };

    // Topic unlock requirements
    const TOPIC_UNLOCK_REQUIREMENTS = {
      LINKED_LIST: 15, // Solve 15 array problems to unlock Linked List
      STACKS: 30,      // Solve 30 problems total to unlock Stacks
      QUEUES: 45,      // Solve 45 problems total to unlock Queues
      TREES: 60        // Solve 60 problems total to unlock Trees
    };

    // Function to calculate streak based on consecutive days
    function calculateStreak(solvedDates) {
      if (!solvedDates || solvedDates.length === 0) return 0;
      
      // Convert to Date objects and sort in descending order
      const dates = solvedDates.map(date => new Date(date)).sort((a, b) => b - a);
      
      let streak = 0;
      const today = new Date();
      today.setHours(0, 0, 0, 0);
      
      let currentDate = new Date(dates[0]);
      currentDate.setHours(0, 0, 0, 0);
      
      // Check if latest solve was today or yesterday
      const diffToday = Math.floor((today - currentDate) / (1000 * 60 * 60 * 24));
      
      if (diffToday === 0) {
        streak = 1;
      } else if (diffToday === 1) {
        streak = 1;
        currentDate = new Date(today);
        currentDate.setDate(currentDate.getDate() - 1);
      } else {
        return 0; // No recent activity
      }
      
      // Check consecutive days backwards
      for (let i = 1; i < dates.length; i++) {
        const prevDate = new Date(dates[i]);
        prevDate.setHours(0, 0, 0, 0);
        
        const diffDays = Math.floor((currentDate - prevDate) / (1000 * 60 * 60 * 24));
        
        if (diffDays === 1) {
          streak++;
          currentDate = prevDate;
        } else if (diffDays > 1) {
          break; // Streak broken
        }
      }
      
      return streak;
    }

    // Function to get rank based on problems solved
    function getRank(totalSolved) {
      for (const [key, rank] of Object.entries(RANK_SYSTEM)) {
        if (totalSolved >= rank.min && totalSolved <= rank.max) {
          return rank;
        }
      }
      return RANK_SYSTEM.NEWBIE;
    }

    // Function to update topic progress
    function updateTopicProgress(topicId, solved, total) {
      const progressElement = document.getElementById(`${topicId}Progress`);
      const progressBar = document.getElementById(`${topicId}ProgressBar`);
      const progressPercentage = total > 0 ? (solved / total) * 100 : 0;
      
      if (progressElement) {
        progressElement.textContent = `${solved} out of ${total} problems solved`;
      }
      
      if (progressBar) {
        progressBar.style.width = `${progressPercentage}%`;
      }
      
      return progressPercentage;
    }

    // Function to unlock topics based on progress
    function unlockTopics(totalSolved, arraySolved) {
      // Unlock Linked List if array requirements met
      if (arraySolved >= TOPIC_UNLOCK_REQUIREMENTS.LINKED_LIST) {
        const linkedListCard = document.getElementById('linkedListCard');
        if (linkedListCard) {
          linkedListCard.classList.remove('locked');
          // Update the locked text to Continue button
          const progressInfo = linkedListCard.querySelector('.progress-info');
          const lockedSpan = progressInfo.querySelector('.text-muted');
          if (lockedSpan) {
            const continueBtn = document.createElement('a');
            continueBtn.href = '/dsa/linkedlist';
            continueBtn.className = 'btn-primary-custom btn-sm';
            continueBtn.textContent = 'Continue';
            lockedSpan.replaceWith(continueBtn);
          }
        }
      }
      
      // Unlock other topics based on total solved
      const topicsToUnlock = [
        { id: 'stacks', requirement: TOPIC_UNLOCK_REQUIREMENTS.STACKS },
        { id: 'queues', requirement: TOPIC_UNLOCK_REQUIREMENTS.QUEUES },
        { id: 'trees', requirement: TOPIC_UNLOCK_REQUIREMENTS.TREES }
      ];
      
      topicsToUnlock.forEach(topic => {
        if (totalSolved >= topic.requirement) {
          const topicCard = document.getElementById(`${topic.id}Card`);
          if (topicCard) {
            topicCard.classList.remove('locked');
            // Update the locked text to Continue button
            const progressInfo = topicCard.querySelector('.progress-info');
            const lockedSpan = progressInfo.querySelector('.text-muted');
            if (lockedSpan) {
              const continueBtn = document.createElement('a');
              continueBtn.href = `/dsa/${topic.id}`;
              continueBtn.className = 'btn-primary-custom btn-sm';
              continueBtn.textContent = 'Continue';
              lockedSpan.replaceWith(continueBtn);
            }
          }
        }
      });
    }

    // Function to count unlocked topics
    function countUnlockedTopics(totalSolved, arraySolved) {
      let count = 1; // Arrays is always unlocked
      
      if (arraySolved >= TOPIC_UNLOCK_REQUIREMENTS.LINKED_LIST) count++;
      if (totalSolved >= TOPIC_UNLOCK_REQUIREMENTS.STACKS) count++;
      if (totalSolved >= TOPIC_UNLOCK_REQUIREMENTS.QUEUES) count++;
      if (totalSolved >= TOPIC_UNLOCK_REQUIREMENTS.TREES) count++;
      
      return count;
    }

    async function loadUserData() {
      try {
        // Fetch real user data from backend
        const res = await fetch('/api/user/progress/current'); // This should return current logged-in user data
        const userData = await res.json();

        // Extract data from response
        const totalSolved = userData.totalSolved || 0;
        const arraySolved = userData.arraySolved || 0;
        const linkedListSolved = userData.linkedListSolved || 0;
        const stacksSolved = userData.stacksSolved || 0;
        const queuesSolved = userData.queuesSolved || 0;
        const treesSolved = userData.treesSolved || 0;
        const solvedDates = userData.solvedDates || [];
        const userName = userData.userName || 'User';

        // Update user name
        document.getElementById('userName').textContent = userName;

        // Calculate streak
        const streak = calculateStreak(solvedDates);
        
        // Update stats
        document.getElementById('problemsSolved').textContent = totalSolved;
        document.getElementById('currentStreak').innerHTML = `${streak} <i class="fas fa-fire streak-fire"></i>`;
        
        // Update rank
        const userRank = getRank(totalSolved);
        document.getElementById('userRank').innerHTML = `${userRank.name} <span class="rank-badge ${userRank.class}">${totalSolved} problems</span>`;

        // Update topic progress
        updateTopicProgress('array', arraySolved, 30);
        updateTopicProgress('linkedList', linkedListSolved, 15);
        updateTopicProgress('stacks', stacksSolved, 12);
        updateTopicProgress('queues', queuesSolved, 10);
        updateTopicProgress('trees', treesSolved, 20);

        // Unlock topics based on progress
        unlockTopics(totalSolved, arraySolved);

        // Count and update unlocked topics
        const unlockedTopics = countUnlockedTopics(totalSolved, arraySolved);
        document.getElementById('topicsUnlocked').textContent = unlockedTopics;

      } catch (error) {
        console.error('Error loading user data:', error);
        
        // Fallback to sample data for demonstration
        const sampleData = {
          totalSolved: 9,
          arraySolved: 9,
          linkedListSolved: 0,
          stacksSolved: 0,
          queuesSolved: 0,
