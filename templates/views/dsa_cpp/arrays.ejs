    // ✅ Medium Unlock Status Check
    document.addEventListener('DOMContentLoaded', function() {
      checkMediumUnlockStatus();
      checkHardUnlockStatus();
    });

    async function checkMediumUnlockStatus() {
      try {
        const response = await fetch('/api/user/progress/arrays');
        const data = await response.json();
        
        const solvedEasyCount = data.solved || 0;
        const isMediumUnlocked = solvedEasyCount >= 3;
        
        updateMediumButton(isMediumUnlocked, solvedEasyCount);
        updateUnlockAlert(isMediumUnlocked, solvedEasyCount);
      } catch (error) {
        console.error('Error checking unlock status:', error);
      }
    }

    function updateMediumButton(isUnlocked, solvedCount) {
      const container = document.getElementById('mediumButtonContainer');
      
      if (isUnlocked) {
        container.innerHTML = `
          <a href="/dsa/arrays/medium" class="btn-primary-custom">Solve Now</a>
          <small class="text-success d-block mt-2">
            <i class="fas fa-unlock me-1"></i> Unlocked
          </small>
        `;
      } else {
        container.innerHTML = `
          <a href="#" class="btn-outline-custom disabled">Locked</a>
          <small class="text-muted d-block mt-2">
            <i class="fas fa-lock me-1"></i> 
            ${3 - solvedCount} more easy problems to unlock
          </small>
        `;
      }
    }

    function updateUnlockAlert(isUnlocked, solvedCount) {
      const alert = document.getElementById('unlockAlert');
      
      if (isUnlocked) {
        alert.innerHTML = `
          <div class="d-flex align-items-center">
            <i class="fas fa-unlock me-3 text-success"></i>
            <div>
              <strong>Medium Level Unlocked!</strong> You've solved ${solvedCount} easy problems. 
              You can now access medium difficulty problems.
            </div>
          </div>
        `;
        alert.style.borderLeftColor = 'var(--success)';
        alert.style.background = 'rgba(40, 167, 69, 0.1)';
      } else {
        alert.innerHTML = `
          <div class="d-flex align-items-center">
            <i class="fas fa-lock me-3 text-warning"></i>
            <div>
              <strong>Unlock Advanced Levels:</strong> Solve at least 3 Easy problems to unlock Medium level.
              You've solved <strong>${solvedCount} out of 3</strong> required easy problems.
            </div>
          </div>
        `;
      }
    }

    // Hard Unlock Status Check
    async function checkHardUnlockStatus() {
      try {
        const response = await fetch('/api/user/progress/arrays-medium');
        const data = await response.json();
        
        const solvedMediumCount = data.solved || 0;
        const isHardUnlocked = solvedMediumCount >= 2;
        
        updateHardButton(isHardUnlocked, solvedMediumCount);
      } catch (error) {
        console.error('Error checking hard unlock status:', error);
      }
    }

    function updateHardButton(isUnlocked, solvedCount) {
      const container = document.getElementById('hardButtonContainer');
      
      if (isUnlocked) {
        container.innerHTML = `
          <a href="/dsa/arrays/hard" class="btn-primary-custom">Solve Now</a>
          <small class="text-success d-block mt-2">
            <i class="fas fa-unlock me-1"></i> Unlocked
          </small>
        `;
      } else {
        container.innerHTML = `
          <a href="#" class="btn-outline-custom disabled">Locked</a>
          <small class="text-muted d-block mt-2">
            <i class="fas fa-lock me-1"></i> 
            ${2 - solvedCount} more medium problems to unlock
          </small>
        `;
      }
    }
  </script>
