<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>PrepVerse - Login</title>
    <link rel="stylesheet" href="/css/styles.css">
    <link rel="stylesheet" href="/css/auth.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;500;600;700&display=swap" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <style>
        /* Enhanced Auth Styles with Animations */
        :root {
            --primary: #1070AE;
            --primary-light: #439FC8;
            --primary-dark: #05243B;
            --secondary: #064471;
            --light: #F3EDE1;
            --dark: #05243B;
            --darker: #041A2E;
            --gray: #7e7e7e;
            --success: #28a745;
        }

        body {
            height: 100%;
            margin: 0;
            font-family: 'Poppins', 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background-color: var(--dark);
            color: var(--light);
            overflow-x: hidden;
            scroll-behavior: smooth;
        }

        /* Loading Animation */
        .loading-wrapper {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background-color: var(--darker);
            display: flex;
            justify-content: center;
            align-items: center;
            z-index: 9999;
            transition: opacity 0.5s ease-out;
        }

        /* Auth Section with Animated Background */
        .auth-section {
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 2rem;
            background: radial-gradient(ellipse at bottom, var(--darker) 0%, var(--dark) 100%);
            position: relative;
            overflow: hidden;
        }

        .auth-section::before {
            content: "";
            position: absolute;
            top: -50%;
            left: -50%;
            width: 200%;
            height: 200%;
            background: 
                radial-gradient(circle at 30% 30%, rgba(16, 112, 174, 0.1) 0%, transparent 20%),
                radial-gradient(circle at 70% 70%, rgba(16, 112, 174, 0.1) 0%, transparent 20%);
            animation: floatBackground 20s linear infinite alternate;
            z-index: 0;
        }

        /* Auth Container with Glass Morphism */
        .auth-container {
            width: 100%;
            max-width: 500px;
            background: rgba(5, 36, 59, 0.85);
            border-radius: 16px;
            padding: 2.5rem;
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.3);
            border: 1px solid rgba(16, 112, 174, 0.3);
            backdrop-filter: blur(10px);
            -webkit-backdrop-filter: blur(10px);
            position: relative;
            z-index: 1;
            transform: translateY(20px);
            opacity: 0;
            animation: fadeInUp 0.6s ease-out forwards;
        }

        /* Header Styles with Logo Animation */
        .auth-header {
            text-align: center;
            margin-bottom: 2rem;
            transform: translateY(-20px);
            opacity: 0;
            animation: fadeInUp 0.6s ease-out 0.2s forwards;
        }

        .auth-logo {
            width: 80px;
            height: auto;
            margin-bottom: 1rem;
            filter: drop-shadow(0 0 10px rgba(16, 112, 174, 0.5));
            animation: pulse 2s infinite alternate;
        }

        .auth-header h2 {
            color: var(--primary-light);
            font-size: 2rem;
            margin-bottom: 0.5rem;
            background: linear-gradient(to right, var(--primary), var(--primary-light));
            -webkit-background-clip: text;
            background-clip: text;
            color: transparent;
        }

        /* Form Styles with Input Animations */
        #signinForm {
            display: flex;
            flex-direction: column;
            gap: 1.5rem;
            transform: translateY(20px);
            opacity: 0;
            animation: fadeInUp 0.6s ease-out 0.4s forwards;
        }

        .form-group {
            display: flex;
            flex-direction: column;
            position: relative;
        }

        .form-group label {
            color: var(--light);
            margin-bottom: 0.5rem;
            font-weight: 500;
            transform: translateX(-10px);
            opacity: 0;
            animation: fadeInRight 0.4s ease-out forwards;
        }

        .form-group input, .form-group select {
            padding: 1rem;
            border-radius: 8px;
            border: 1px solid var(--secondary);
            background-color: rgba(6, 68, 113, 0.3);
            color: var(--light);
            font-size: 1rem;
            transition: all 0.3s ease;
            transform: translateY(10px);
            opacity: 0;
            animation: fadeInUp 0.4s ease-out forwards;
        }

        .form-group input:focus, .form-group select:focus {
            outline: none;
            border-color: var(--primary-light);
            box-shadow: 0 0 0 2px rgba(16, 112, 174, 0.3);
            background-color: rgba(6, 68, 113, 0.5);
        }

        /* User Type Selector */
        .user-type-selector {
            display: flex;
            gap: 1rem;
            margin-bottom: 1rem;
        }

        .user-type-option {
            flex: 1;
            text-align: center;
            padding: 1rem;
            border: 2px solid var(--secondary);
            border-radius: 8px;
            cursor: pointer;
            transition: all 0.3s ease;
            background: rgba(6, 68, 113, 0.3);
        }

        .user-type-option:hover {
            border-color: var(--primary-light);
            background: rgba(16, 112, 174, 0.2);
        }

        .user-type-option.active {
            border-color: var(--primary-light);
            background: rgba(16, 112, 174, 0.3);
            box-shadow: 0 0 10px rgba(16, 112, 174, 0.3);
        }

        .user-type-icon {
            font-size: 1.5rem;
            margin-bottom: 0.5rem;
            color: var(--primary-light);
        }

        .user-type-label {
            font-weight: 600;
            color: var(--light);
        }

        /* Password Strength Indicator */
        .password-strength {
            height: 4px;
            background: var(--secondary);
            border-radius: 2px;
            margin-top: 0.5rem;
            overflow: hidden;
            position: relative;
        }

        .strength-meter {
            height: 100%;
            width: 0;
            background: var(--primary);
            transition: width 0.3s ease, background 0.3s ease;
        }

        /* Button Styles with Hover Effects */
        .btn-auth {
            background-color: var(--primary);
            color: white;
            border: none;
            padding: 1rem;
            border-radius: 8px;
            font-size: 1.1rem;
            font-weight: 600;
            cursor: pointer;
            transition: all 0.3s ease;
            margin-top: 1rem;
            position: relative;
            overflow: hidden;
            transform: translateY(20px);
            opacity: 0;
            animation: fadeInUp 0.6s ease-out 0.6s forwards;
        }

        .btn-auth:hover {
            background-color: var(--primary-light);
            transform: translateY(-2px);
            box-shadow: 0 5px 15px rgba(16, 112, 174, 0.4);
        }

        .btn-auth:active {
            transform: translateY(0);
        }

        .btn-auth::after {
            content: '';
            position: absolute;
            top: 0;
            left: -100%;
            width: 100%;
            height: 100%;
            background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.2), transparent);
            transition: 0.5s;
        }

        .btn-auth:hover::after {
            left: 100%;
        }

        /* Footer/Link Styles */
        .auth-footer {
            text-align: center;
            margin-top: 1.5rem;
            transform: translateY(20px);
            opacity: 0;
            animation: fadeInUp 0.6s ease-out 0.8s forwards;
        }

        .auth-footer p {
            color: var(--gray);
        }

        .auth-footer a {
            color: var(--primary-light);
            text-decoration: none;
            font-weight: 600;
            position: relative;
        }

        .auth-footer a::after {
            content: '';
            position: absolute;
            bottom: -2px;
            left: 0;
            width: 0;
            height: 1px;
            background: var(--primary-light);
            transition: width 0.3s ease;
        }

        .auth-footer a:hover::after {
            width: 100%;
        }

        /* Success Message */
        .success-message {
            background: rgba(40, 167, 69, 0.2);
            border: 1px solid var(--success);
            color: white;
            padding: 1rem;
            border-radius: 8px;
            margin-bottom: 1.5rem;
            display: none;
            animation: fadeIn 0.5s ease-out;
        }

        /* Error Message */
        .error-message {
            background: rgba(220, 53, 69, 0.2);
            border: 1px solid #dc3545;
            color: white;
            padding: 1rem;
            border-radius: 8px;
            margin-bottom: 1.5rem;
            display: none;
            animation: fadeIn 0.5s ease-out;
        }

        /* Keyframe Animations */
        @keyframes fadeInUp {
            from {
                transform: translateY(20px);
                opacity: 0;
            }
            to {
                transform: translateY(0);
                opacity: 1;
            }
        }

        @keyframes fadeInRight {
            from {
                transform: translateX(-10px);
                opacity: 0;
            }
            to {
                transform: translateX(0);
                opacity: 1;
            }
        }

        @keyframes fadeIn {
            from {
                opacity: 0;
            }
            to {
                opacity: 1;
            }
        }

        @keyframes floatBackground {
            0% {
                transform: translate(0, 0);
            }
            100% {
                transform: translate(50px, 50px);
            }
        }

        @keyframes pulse {
            0% {
                filter: drop-shadow(0 0 10px rgba(16, 112, 174, 0.5));
            }
            100% {
                filter: drop-shadow(0 0 15px rgba(16, 112, 174, 0.8));
            }
        }

        /* Responsive Adjustments */
        @media (max-width: 768px) {
            .auth-container {
                padding: 1.5rem;
            }
            
            .auth-header h2 {
                font-size: 1.8rem;
            }
            
            .auth-logo {
                width: 70px;
            }
        }

        @media (max-width: 576px) {
            .auth-section {
                padding: 1rem;
            }
            
            .auth-container {
                padding: 1.25rem;
            }
            
            .auth-header h2 {
                font-size: 1.6rem;
            }
        }

        /* Custom Button Styles for Login/Signup */
        .nav-buttons {
            display: flex;
            gap: 1rem;
            align-items: center;
        }

        .btn-login {
            background: transparent;
            color: var(--light);
            border: 2px solid var(--primary);
            padding: 0.6rem 1.5rem;
            border-radius: 8px;
            font-weight: 600;
            text-decoration: none;
            transition: all 0.3s ease;
            font-size: 0.9rem;
        }

        .btn-login:hover {
            background: rgba(16, 112, 174, 0.1);
            color: var(--primary-light);
            transform: translateY(-2px);
        }

        .btn-signup {
            background: var(--primary);
            color: white;
            border: 2px solid var(--primary);
            padding: 0.6rem 1.5rem;
            border-radius: 8px;
            font-weight: 600;
            text-decoration: none;
            transition: all 0.3s ease;
            font-size: 0.9rem;
        }

        .btn-signup:hover {
            background: var(--primary-light);
            border-color: var(--primary-light);
            color: white;
            transform: translateY(-2px);
            box-shadow: 0 4px 12px rgba(16, 112, 174, 0.3);
        }

        /* Form Options */
        .form-options {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin: 1rem 0;
        }

        .form-check {
            display: flex;
            align-items: center;
            gap: 0.5rem;
        }

        .form-check input[type="checkbox"] {
            width: 16px;
            height: 16px;
            accent-color: var(--primary);
        }

        .form-check label {
            margin: 0;
            font-size: 0.9rem;
            color: var(--gray);
        }

        .forgot-password {
            color: var(--primary-light);
            text-decoration: none;
            font-size: 0.9rem;
            transition: color 0.3s ease;
        }

        .forgot-password:hover {
            color: var(--primary);
        }
    </style>
</head>

<body>
    <!-- Loading Animation -->
    <div id="loading-animation" class="loading-wrapper">
        <div class="box-wrap">
            <div class="box one"></div>
            <div class="box two"></div>
            <div class="box three"></div>
            <div class="box four"></div>
            <div class="box five"></div>
            <div class="box six"></div>
        </div>
    </div>

    <!-- Navigation -->
    <nav class="navbar navbar-expand-lg navbar-dark navbar-custom fixed-top">
        <div class="container">
            <a class="navbar-brand" href="/">
                <div class="nav-logo">
                    <img src="/images/logo.png" alt="PrepVerse Logo" class="logo-image">PrepVerse
                </div>
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navMenu"
                aria-controls="navMenu" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse justify-content-center" id="navMenu">
                <ul class="navbar-nav mb-2 mb-lg-0">
                    <li class="nav-item">
                        <a class="nav-link" href="/">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#">Aptitude</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#">Programming</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#">Interviews</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/about">About</a>
                    </li>
                </ul>
            </div>
            <div class="nav-buttons">
                <a href="/login" class="btn-login">Log in</a>
                <a href="/register" class="btn-signup">Sign up</a>
            </div>
        </div>
    </nav>
    
    <br><br><br>

    <!-- Login Form Section -->
    <section class="auth-section">
        <div class="auth-container">
            <div class="auth-card">
                <div class="auth-header">
                    <img src="/images/logo.png" alt="PrepVerse Logo" class="auth-logo">
                    <h2>Welcome Back!</h2>
                </div>

                <!-- User Type Selector -->
                <div class="user-type-selector">
                    <div class="user-type-option active" data-type="student">
                        <div class="user-type-icon">
                            <i class="fas fa-user-graduate"></i>
                        </div>
                        <div class="user-type-label">Student</div>
                    </div>
                    <div class="user-type-option" data-type="faculty">
                        <div class="user-type-icon">
                            <i class="fas fa-chalkboard-teacher"></i>
                        </div>
                        <div class="user-type-label">Faculty</div>
                    </div>
                </div>

                <form id="signinForm" action="/login" method="POST">
                    <input type="hidden" id="userType" name="userType" value="student">
                    
                    <div class="form-group">
                        <label for="email">Email address</label>
                        <input type="email" id="email" name="email" placeholder="Enter your email" required>
                    </div>
                    <div class="form-group">
                        <label for="password">Password</label>
                        <input type="password" id="password" name="password" placeholder="Enter your password" required>
                    </div>
                    <div class="form-options">
                        <div class="form-check">
                            <input type="checkbox" id="rememberMe" name="rememberMe">
                            <label for="rememberMe">Remember me</label>
                        </div>
                        <a href="#" class="forgot-password">Forgot password?</a>
                    </div>
                    <button type="submit" class="btn-auth">Login</button>
                </form>
                <div class="auth-footer">
                    <p>Don't have an account? <a href="/register">Sign up</a></p>
                </div>
            </div>
        </div>
    </section>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        // Hide loading animation when page loads
        window.addEventListener('load', function() {
            document.getElementById('loading-animation').style.opacity = '0';
            setTimeout(function() {
                document.getElementById('loading-animation').style.display = 'none';
            }, 500);
        });

        // User Type Selection
        const userTypeOptions = document.querySelectorAll('.user-type-option');
        const userTypeInput = document.getElementById('userType');

        userTypeOptions.forEach(option => {
            option.addEventListener('click', function() {
                // Remove active class from all options
                userTypeOptions.forEach(opt => opt.classList.remove('active'));
                // Add active class to clicked option
                this.classList.add('active');
                // Update hidden input value
                userTypeInput.value = this.getAttribute('data-type');
            });
        });

        // Login form handling with SweetAlert
        document.getElementById('signinForm').addEventListener('submit', async function(e) {
            e.preventDefault();

            const email = document.getElementById('email').value;
            const password = document.getElementById('password').value;
            const userType = userTypeInput.value;
            
            // Basic validation
            if (!email || !password) {
                Swal.fire({
                    icon: 'error',
                    title: 'Missing Fields',
                    text: 'Please fill in all fields'
                });
                return false;
            }

            // Show loading state
            Swal.fire({
                title: 'Logging in...',
                allowOutsideClick: false,
                didOpen: () => {
                    Swal.showLoading();
                }
            });

            try {
                const res = await fetch('/login', {
                    method: 'POST',
                    headers: { 
                        'Content-Type': 'application/json',
                        'Accept': 'application/json'
                    },
                    body: JSON.stringify({ email, password, userType })
                });

                const result = await res.json();
                Swal.close(); // Close loading dialog

                if (result.success) {
                    // Success case - redirect to appropriate dashboard
                    await Swal.fire({
                        icon: 'success',
                        title: 'Success!',
                        text: result.message || 'Login successful!'
                    });
                    window.location.href = result.redirectUrl || (userType === 'faculty' ? '/fdashboard' : '/sdashboard');
                } else {
                    // Error case
                    await Swal.fire({
                        icon: 'error',
                        title: 'Login Failed',
                        text: result.error || 'Invalid email or password'
                    });
                }
            } catch (error) {
                Swal.close(); // Close loading dialog
                console.error('Login error:', error);
                
                // More specific error handling
                if (error.message && error.message.includes('JSON')) {
                    await Swal.fire({
                        icon: 'error',
                        title: 'Server Error',
                        text: 'Server returned an invalid response. Please try again.'
                    });
                } else {
                    await Swal.fire({
                        icon: 'error',
                        title: 'Network Error',
                        text: 'Cannot connect to server. Please check your connection.'
                    });
                }
            }
        });
    </script>
</body>
</html>