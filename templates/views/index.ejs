  <script>
    document.addEventListener('DOMContentLoaded', function() {
    const searchForm = document.getElementById('searchForm');
    const searchInput = document.getElementById('mainSearch');
    const searchSuggestions = document.getElementById('searchSuggestions');
    const suggestionItems = document.querySelectorAll('.suggestion-item');

    // Show suggestions when input is focused
    searchInput.addEventListener('focus', function() {
        searchSuggestions.classList.add('show');
    });

    // Hide suggestions when clicking outside
    document.addEventListener('click', function(e) {
        if (!searchForm.contains(e.target)) {
            searchSuggestions.classList.remove('show');
        }
    });

    // Handle suggestion click
    suggestionItems.forEach(item => {
        item.addEventListener('click', function() {
            const searchText = this.getAttribute('data-search');
            searchInput.value = searchText;
            searchSuggestions.classList.remove('show');
            searchInput.focus();
        });
    });

    // Handle Enter key press
    searchInput.addEventListener('keydown', function(e) {
        if (e.key === 'Enter') {
            e.preventDefault();
            
            // Check if input is empty
            if (searchInput.value.trim() === '') {
                // Show error message or highlight the field
                searchInput.style.borderColor = '#dc3545';
                setTimeout(() => {
                    searchInput.style.borderColor = '#064471';
                }, 2000);
                return;
            }

            // Hide suggestions
            searchSuggestions.classList.remove('show');
            
            // Show loading state
            const originalIcon = document.querySelector('.search-icon');
            originalIcon.style.display = 'none';
            
            const loadingIcon = document.createElement('i');
            loadingIcon.className = 'fas fa-spinner fa-spin search-icon';
            loadingIcon.style.position = 'absolute';
            loadingIcon.style.right = '1.5rem';
            loadingIcon.style.top = '50%';
            loadingIcon.style.transform = 'translateY(-50%)';
            loadingIcon.style.color = '#439FC8';
            searchForm.appendChild(loadingIcon);

            // Simulate search processing
            setTimeout(() => {
                // Remove loading icon
                loadingIcon.remove();
                originalIcon.style.display = 'block';
                
                // Redirect to login page
                window.location.href = '/login';
            }, 1000);
        }
    });

    // Handle input changes for dynamic filtering (optional enhancement)
    searchInput.addEventListener('input', function() {
        const searchTerm = this.value.toLowerCase();
        
        suggestionItems.forEach(item => {
            const text = item.getAttribute('data-search').toLowerCase();
            if (text.includes(searchTerm) || searchTerm === '') {
                item.style.display = 'flex';
            } else {
                item.style.display = 'none';
            }
        });
        
        // Show suggestions if there are matches
        const hasVisibleItems = Array.from(suggestionItems).some(item => 
            item.style.display !== 'none'
        );
        
        if (hasVisibleItems && this.value.length > 0) {
            searchSuggestions.classList.add('show');
        } else if (this.value.length === 0) {
            searchSuggestions.classList.add('show');
        } else {
            searchSuggestions.classList.remove('show');
        }
    });

    // Add arrow key navigation for suggestions
    let selectedIndex = -1;

    searchInput.addEventListener('keydown', function(e) {
        const visibleItems = Array.from(suggestionItems).filter(item => 
            item.style.display !== 'none'
        );

        if (e.key === 'ArrowDown') {
            e.preventDefault();
            selectedIndex = Math.min(selectedIndex + 1, visibleItems.length - 1);
            updateSelection(visibleItems);
        } else if (e.key === 'ArrowUp') {
            e.preventDefault();
            selectedIndex = Math.max(selectedIndex - 1, -1);
            updateSelection(visibleItems);
        } else if (e.key === 'Enter' && selectedIndex >= 0) {
            e.preventDefault();
            visibleItems[selectedIndex].click();
        }
    });

    function updateSelection(visibleItems) {
        suggestionItems.forEach(item => item.classList.remove('selected'));
        if (selectedIndex >= 0 && visibleItems[selectedIndex]) {
            visibleItems[selectedIndex].classList.add('selected');
            visibleItems[selectedIndex].style.backgroundColor = 'rgba(16, 112, 174, 0.3)';
        }
    }
});
